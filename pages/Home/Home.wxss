/* pages/Home/Home.wxss */
.mainContainer {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-content: center;
}
.latest {
  height: 85rpx;
  display: flex;
  flex-direction: column-reverse;
  align-items: flex-start;
}
.latest .tempContainer {
  padding: 0;
  margin: 0;
}
.latest image {
  width: 100rpx;
  height: 20rpx;
}
.latest text {
  display: inline-block;
  font-size: 40rpx;
  color: #2D3220;
  margin-left: 25rpx;
  font-family: 'Alibaba PuHuiTi';
}
.functions {
  height: 75rpx;
  margin: 0;
  display: flex;
  flex-direction: column-reverse;
  align-items: flex-start;
}
.functions .tempContainer {
  padding: 0;
  margin: 0;
}
.functions image {
  width: 100rpx;
  height: 20rpx;
}
.functions text {
  display: inline-block;
  font-size: 40rpx;
  color: #2D3220;
  margin-left: 25rpx;
  font-family: 'Alibaba PuHuiTi';
}
.slideShow {
  /* height: 500rpx; */
  width: auto;
  padding: 25rpx 60rpx 25rpx 60rpx;
}
.slideShow .swiper {
  background-color: #eeeeee;
  border-radius: 25px;
  height: 380rpx;
  /*轮播图的装饰*/
  box-shadow: 0 0 10rpx 2rpx #00000020;
}
.slideShow .swiper swiper-item {
  display: flex;
  justify-content: center;
  align-items: stretch;
  padding: 0;
  margin: 0;
}
.slideShow .swiper swiper-item image {
  height: 370rpx;
}
.fourButtonArea {
  width: auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
  padding: 10rpx;
  margin-top: 0rpx;
  /*button的样式*/
}
.fourButtonArea .buttonType {
  height: 280rpx;
  width: 280rpx;
  /* margin-bottom: 25rpx; */
  margin: 35rpx 25rpx 30rpx 25rpx;
  padding: 15rpx;
  box-shadow: 0 0 10rpx 2rpx #00000020;
  border-radius: 25rpx;
  /* border: 1px solid red; */
  /*button内部内容排序*/
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  position: relative;
}
.fourButtonArea .buttonType text {
  display: inline-block;
  font-family: 'Alibaba PuHuiTi';
  font-weight: bold;
}
.fourButtonArea .iconType {
  width: 80rpx;
  height: 80rpx;
  display: block;
  /* text-align: center; */
  /* border: 1px solid rgb(32, 235, 14); */
}
.fourButtonArea .dotContainer {
  /* border: 1px solid rgb(102, 30, 235); */
  margin: 0;
  padding: 0;
  display: block;
  width: 100%;
}
.fourButtonArea .dotContainer .dotType {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  /* border: 1px solid rgb(41, 187, 206); */
  margin: 0rpx;
  padding: 0rpx;
  float: right;
}
.naviContainer {
  position: fixed;
  bottom: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
