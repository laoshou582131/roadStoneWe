.container {
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}
.container scroll-view {
  height: 1400rpx;
}
.monthlySection {
  padding: 35rpx;
}
.monthlySection text {
  display: block;
}
.monthlySection .bigDate {
  display: block;
  margin-bottom: 35rpx;
}
.monthlySection .DonationItems {
  padding: 20rpx;
  border-radius: 25rpx;
  box-shadow: 0 0 5rpx 2rpx #d1d1d1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.monthlySection .DonationItems .monthlyDescribe .dateD {
  margin-top: 15rpx;
  font-size: 16rpx;
}
.monthlySection .DonationItems .Money {
  font-size: 36rpx;
  color: #dba239;
}
