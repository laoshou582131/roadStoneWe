.container {
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}
.container scroll-view {
  height: 1250rpx;
}
.container .topText {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.container .topText .bigDate {
  display: block;
  margin-top: 25rpx;
  margin-left: 30rpx;
  font-size: 48rpx;
  font-weight: bold;
  color: #494e3a;
}
.monthlySection {
  padding: 35rpx;
}
.monthlySection text {
  display: block;
}
.monthlySection .bigDate {
  display: block;
  margin-bottom: 35rpx;
  font-size: 48rpx;
  font-weight: bold;
  color: #494e3a;
}
.monthlySection .DonationItems {
  padding: 20rpx;
  border-radius: 25rpx;
  box-shadow: 0 0 5rpx 2rpx #d1d1d1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.monthlySection .DonationItems .monthlyDescribe .dateD {
  margin-top: 15rpx;
  font-size: 16rpx;
}
.monthlySection .DonationItems .monthlyDescribe text {
  color: #494e3a;
}
.monthlySection .DonationItems .Money {
  font-size: 36rpx;
  color: #dba239;
}
