/* pages/BorrowingBook/BorrowingBooks.wxss */
.container {
  margin: 20rpx;
  padding: 15rpx;
  background-color: #f1fad8;
  border-radius: 25rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  align-content: center;
}
.container .titleBar {
  display: flex;
  align-items: center;
  color: #474646;
}
.container .titleBar .bookTitle {
  width: 320rpx;
  flex-grow: 0;
  text-align: end;
}
.container .titleBar .borTimeTitle {
  width: 100rpx;
  flex-grow: 1;
  text-align: center;
}
.container scroll-view {
  height: 1300rpx;
  padding-top: 0rpx;
}
.container .borrowingBooksTop {
  margin: 10rpx 15rpx 0rpx 15rpx;
  height: 120rpx;
  background-color: white;
  display: flex;
  align-items: center;
  border-radius: 25rpx 25rpx 0 0;
  border-bottom: 1px solid #e0e0e0;
}
.container .borrowingBooksMiddle {
  margin: 0rpx 15rpx 0rpx 15rpx;
  height: 120rpx;
  background-color: white;
  display: flex;
  align-items: center;
  border-radius: 0rpx 0rpx 0 0;
  border-bottom: 1px solid #e0e0e0;
}
.container .borrowingBooksBottom {
  margin: 0rpx 15rpx 0rpx 15rpx;
  height: 120rpx;
  background-color: white;
  display: flex;
  align-items: center;
  border-radius: 0rpx 0rpx 25rpx 25rpx;
}
.container .itemIndex {
  width: 50rpx;
  flex-grow: 0;
  text-align: center;
}
.container .bookPic {
  width: 120rpx;
  flex-grow: 0;
}
.container .bookPic .bookPicType {
  width: 100rpx;
}
.container .timeType {
  font-size: 16rpx;
  width: 130rpx;
  flex-grow: 0;
}
.container .bookNameType {
  width: 100rpx;
  flex-grow: 1;
}
.container .btnType {
  width: 100rpx;
  height: 50rpx;
  flex-grow: 0;
  font-size: 18rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #e3f3b4;
  margin-right: 10rpx;
}
.container .borrowBtnArea {
  margin: 15rpx 0 0 0;
  padding: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
}
.container .borrowBtnArea .btnOK {
  margin: 0;
  padding: 15rpx 0 0 0;
  width: 255rpx;
  height: 120rpx;
  background-color: #dcffce;
  border-radius: 0;
  text-align: center;
}
