/* pages/BookClassification/BookClassification.wxss */
.searchBarContainer {
  margin: 0;
  padding: 20rpx 45rpx 20rpx 45rpx;
  display: flex;
  justify-content: center;
  align-content: center;
}
.searchBarContainer .tempContainer {
  display: flex;
  justify-content: space-evenly;
  align-content: center;
  align-items: center;
  width: 100%;
  /* margin: 0 50rpx 0 25rpx; */
  border-radius: 20rpx;
  box-shadow: 0 8px 5px 1px #e0e0e0;
  padding: 0 15rpx 0 35rpx;
}
.searchBarContainer .tempContainer .searchBar {
  display: inline-block;
  margin: 0;
  width: 100%;
  height: 75rpx;
}
.searchBarContainer .tempContainer .searchBtn {
  display: inline-block;
  margin: 10rpx 0 0 0;
  padding: 0;
  width: 70rpx;
  height: 70rpx;
}
.searchBarContainer .tempContainer .searchBtn .searchIcon {
  width: 60rpx;
  height: 60rpx;
  padding: 0;
  /* margin-top: 25rpx; */
}
/*内容展示*/
.classificationContainer {
  display: flex;
  justify-content: flex-start;
  align-content: stretch;
  margin-top: 35rpx;
}
.left-col {
  /* border: 1px solid rgb(30, 228, 119); */
  width: 150rpx;
  height: auto;
  flex-grow: 0;
  display: inline-block;
  /*picker 相关style*/
}
.left-col .indicatorItemType {
  height: 50px;
}
.left-col picker-view {
  width: 100%;
  height: 1100rpx;
  /* border: 1px solid rgb(39, 63, 202); */
  /* background-color: rgb(253, 214, 214); */
}
.right-col {
  /* border: 1px solid rgb(252, 12, 92); */
  width: 150rpx;
  height: 100%;
  flex-grow: 1;
}
.right-col .scroller {
  /* border: 1px solid rgb(180, 252, 12); */
  width: 100%;
  height: 1150rpx;
  /* white-space: nowrap; */
}
.right-col .scroller .booksTempContainer {
  width: 100%;
  height: auto;
  /*书籍栏目的排列*/
  display: flex;
  justify-content: space-evenly;
  flex-wrap: wrap;
  align-content: space-around;
  /*bookType*/
}
.right-col .scroller .booksTempContainer .bookType {
  width: 225rpx;
  height: 200rpx;
  margin: 30rpx 0 5rpx 0;
  display: flex;
  justify-content: center;
  align-content: center;
}
.right-col .scroller .booksTempContainer .pictureType {
  width: 225rpx;
  height: 200rpx;
  /* border: 1px solid rgb(39, 63, 202); */
  /* margin-top: 25rpx; */
}
.right-col .scroller .booksTempContainer .bookName {
  font-size: 24rpx;
}
