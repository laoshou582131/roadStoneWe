.container {
  padding: 0;
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 1250rpx;
}
.phoneCerBox {
  border-radius: 25rpx;
  background-color: #F8F8F8;
  padding: 35rpx;
  width: 75%;
  height: 30%;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: stretch;
}
.phoneCerBox .theText {
  font-size: 36rpx;
  display: block;
}
.phoneCerBox text {
  display: inline-block;
}
.phoneCerBox input {
  display: inline-block;
}
.phoneCerBox .phoneNumber {
  height: 75rpx;
  width: auto;
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.phoneCerBox .phoneNumber .inputPhoneNum {
  height: 60rpx;
  width: 400rpx;
  padding-left: 10rpx;
  background-color: #EDEDED;
}
.phoneCerBox .certificater {
  height: 75rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.phoneCerBox .certificater .inputCode {
  width: 200rpx;
  height: 60rpx;
  padding-left: 10rpx;
  background-color: #EDEDED;
}
.phoneCerBox .certificater .getCode {
  height: 50rpx;
  width: 160rpx;
  background-color: #B0C080;
}
.phoneCerBox .certificater .getCode text {
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.phoneCerBox .Btns {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}
.phoneCerBox .Btns button {
  width: 220rpx;
  height: 75rpx;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.phoneCerBox .Btns .confirmBtn {
  background-color: #B0C080;
}
