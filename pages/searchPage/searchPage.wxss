/* pages/searchPage/searchPage.wxss */
.container {
  margin: 0;
  padding: 25rpx;
  color: #494e3a;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
}
.searchBarContainer {
  margin: 0;
  padding: 20rpx 0rpx 20rpx 0rpx;
  display: flex;
  justify-content: center;
  align-items: stretch;
}
.searchBarContainer .tempContainer {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  /* margin: 0 50rpx 0 25rpx; */
  width: 550rpx;
  border-radius: 20rpx;
  box-shadow: 0 8px 5px 1px #e0e0e0;
  padding: 0 15rpx 0 35rpx;
}
.searchBarContainer .tempContainer .formSearch {
  margin: 0;
  padding: 0;
}
.searchBarContainer .tempContainer .searchBar {
  display: inline-block;
  margin: 0;
  width: 100%;
  height: 75rpx;
}
.searchBarContainer .tempContainer .searchBtn {
  display: inline-block;
  margin: 10rpx 0 0 0;
  padding: 0;
  width: 90rpx;
  height: 70rpx;
}
.searchBarContainer .tempContainer .searchBtn .searchIcon {
  width: 60rpx;
  height: 60rpx;
  padding: 0;
  /* margin-top: 25rpx; */
}
.bookItemsContainer {
  border: 1px solid black;
  height: auto;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: stretch;
}
.bookItemsContainer scroll-view {
  height: 1200rpx;
  border: 1px solid #51d11e;
  padding: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}
.bookItemsContainer .bookItem {
  height: 150rpx;
  border: 1px solid red;
  margin-bottom: 15rpx;
  padding: 10rpx;
  border-radius: 25rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.bookItemsContainer .bookItem .bookIndex {
  width: 75rpx;
  flex-grow: 0;
  text-align: center;
}
.bookItemsContainer .bookItem image {
  width: 175rpx;
  flex-grow: 0;
}
.bookItemsContainer .bookItem .briefContent {
  width: 300rpx;
  flex-grow: 0;
  margin-left: 50rpx;
}
.bookItemsContainer .bookItem .briefContent text {
  display: block;
  text-align: left;
}
