/* pages/Ranking/Ranking.wxss */
.container {
  padding: 0 25rpx 0 25rpx;
  margin: 0;
  color: #494e3a;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
}
.personalInfo {
  margin: 0;
  padding: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
}
.personalInfo .picon {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.iconType {
  width: 130rpx;
  height: 130rpx;
  display: block;
  border-radius: 85rpx;
  /* border: 1px solid rgb(0, 255, 234); */
}
.pName {
  display: block;
  /* border: 1px solid rgb(0, 255, 0); */
  text-align: center;
}
.dots {
  position: absolute;
  width: 450rpx;
}
.pCredictContainer {
  display: flex;
  align-items: center;
  background-color: white;
  /* border: 1px solid rgb(171, 34, 199); */
  width: 100%;
  height: 120rpx;
  margin-top: 20rpx;
  border-radius: 25rpx;
  box-shadow: 0 0 10rpx 2rpx #00000020;
  /* position: relative; */
}
.myCredit {
  width: 200rpx;
  height: 75rpx;
  flex-grow: 0;
  /* border: 1px solid rgb(94, 199, 34); */
  padding: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.picBType {
  width: 200rpx;
  /* height: 100rpx; */
}
.TextMyCredit {
  position: absolute;
  left: 65rpx;
  top: 35rpx;
}
.creditPoint {
  width: 200rpx;
  flex-grow: 1;
  /* border: 1px solid rgb(34, 147, 199); */
}
.sharePoster {
  width: 200rpx;
  flex-grow: 0;
  font-size: 24rpx;
}
/*排行榜*/
.ranking {
  margin: 0;
  padding: 10rpx 25rpx 0 25rpx;
  height: 920rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: stretch;
  align-content: center;
  /* justify-content: space-evenly; */
}
.rankName {
  /* width: 100%; */
  height: 50rpx;
  flex-grow: 0;
  font-size: 36rpx;
  font-weight: bold;
}
.rankingDifC {
  /* width: 100%; */
  height: 75rpx;
  flex-grow: 0;
  padding: 0;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}
.rankBtnType {
  margin: 0;
  padding: 0 20rpx 0 20rpx;
  background-color: #afc276;
  height: 55rpx;
  width: 125rpx;
  font-size: 22rpx;
}
.rankBtnType text {
  color: #494e3a;
  font-weight: bold;
}
.rankBtnTypeNs {
  margin: 0;
  padding: 0 20rpx 0 20rpx;
  background-color: #d3e4a3;
  height: 55rpx;
  width: 125rpx;
  font-size: 22rpx;
}
.rankBtnTypeNs text {
  color: #494e3a;
}
.rankingList {
  /* width: 100%; */
  height: 150rpx;
  flex-grow: 1;
  /* border: 1px solid rgb(199, 34, 89); */
  border-radius: 25rpx;
  box-shadow: 0 0 10rpx 2rpx #00000020;
  padding: 5rpx;
  margin-top: 15rpx;
  /*用户内容排列*/
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}
.scrollerRank {
  height: 650rpx;
}
.rankListUserType {
  /* width: 100%; */
  height: 80rpx;
  /* border: 1px solid rgb(8, 201, 8); */
  /*用户列表内部内容排序模式*/
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.rankIndex {
  width: 75rpx;
  flex-grow: 0;
  /* border: 1px solid rgb(201, 156, 8); */
  text-align: center;
}
.imageRankType {
  width: 75rpx;
  height: 75rpx;
  flex-grow: 0;
}
.rankUserName {
  width: 220rpx;
  flex-grow: 0;
  text-align: center;
}
.rankUserDonate {
  width: 75rpx;
  flex-grow: 1;
  text-align: left;
}
.naviContainer {
  position: fixed;
  bottom: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
