<view class="personalInfo">
  <view class="picon">
    <image class="iconType" src="../../images/icons/Picon.png" mode="aspectFit"></image>
    <text class="pName">星川莉莉</text>
  </view>
  <view class="pCredictContainer">
    <view class="myCredit">
      <image class="picBType" src="../../images/icons/backP.png" mode="widthFix"></image>
      <text class="TextMyCredit">我的积分</text>
    </view>
    <text class="creditPoint">X 11</text>
    <button class="sharePoster" type="default" plain="true" style="border: none;">分享海报</button>
  </view>
</view>

<view class="ranking">
  <view class="rankName">
    <text>排行榜</text>
  </view>
  <view class="rankingDifC">
    <button class="rankBtnType" type="default">阅读榜</button>
    <button class="rankBtnType" type="default">捐书榜</button>
    <button class="rankBtnType" type="default">资助榜</button>
  </view>
  <view class="rankingList">
    <scroll-view class="scrollerRank" scroll-y="true">
      <view class="rankListUserType" wx:for="{{12}}" wx:key="index">
        <text class="rankIndex">{{index}}</text>
        <image class="imageRankType" src="../../images/icons/Picon.png" mode="aspectFit"></image>
        <text class="rankUserName">PName</text>
        <text class="rankUserDonate">捐书4000本</text>
      </view>
    </scroll-view>
  </view>
  
</view>
<view class="naviContainer">
  <myTabBar></myTabBar>
</view>