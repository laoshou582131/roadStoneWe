/* pages/BorrowingBook/BorrowingBooks.wxss */
.container {
  color: #494e3a;
  margin: 20rpx;
  padding: 15rpx;
  background-color: #B1C280;
  border-radius: 25rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  align-content: center;
}
.container .titleBar {
  display: flex;
  align-items: center;
  color: #f7fceb;
}
.container .titleBar .bookTitle {
  width: 320rpx;
  flex-grow: 0;
  text-align: end;
}
.container .titleBar .borTimeTitle {
  width: 100rpx;
  flex-grow: 1;
  text-align: center;
}
.container scroll-view {
  height: 1200rpx;
  padding-top: 0rpx;
}
.container .borrowingBooksTop {
  margin: 10rpx 15rpx 0rpx 15rpx;
  height: 120rpx;
  background-color: #f7fceb;
  display: flex;
  align-items: center;
  border-radius: 25rpx 25rpx 0 0;
  border-bottom: 1px solid #e0e0e0;
}
.container .borrowingBooksMiddle {
  margin: 0rpx 15rpx 0rpx 15rpx;
  height: 120rpx;
  background-color: #f7fceb;
  display: flex;
  align-items: center;
  border-radius: 0rpx 0rpx 0 0;
  border-bottom: 1px solid #e0e0e0;
}
.container .borrowingBooksBottom {
  margin: 0rpx 15rpx 0rpx 15rpx;
  height: 120rpx;
  background-color: #f7fceb;
  display: flex;
  align-items: center;
  border-radius: 0rpx 0rpx 25rpx 25rpx;
}
.container .itemIndex {
  width: 50rpx;
  flex-grow: 0;
  text-align: center;
}
.container .bookPic {
  width: 125rpx;
  flex-grow: 0;
}
.container .bookPic .bookPicType {
  width: 100rpx;
}
.container .timeType {
  font-size: 16rpx;
  width: 100rpx;
  flex-grow: 1;
}
.container .bookNameType {
  width: 200rpx;
  flex-grow: 1;
  font-size: 24rpx;
  color: #494e3a;
}
.container .checkBoxType {
  width: 75rpx;
  flex-grow: 0;
}
.container .borrowBtnArea {
  margin: 15rpx 0 0 0;
  padding: 0 15rpx 0 15rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
}
.container .borrowBtnArea text {
  color: #f7fceb;
}
.container .borrowBtnArea .btnOK {
  margin: 0;
  padding: 15rpx 0 0 0;
  width: 255rpx;
  height: 120rpx;
  background-color: #f7fceb;
  border-radius: 0;
  text-align: center;
  color: #494e3a;
}
.showNone {
  color: #f7fceb;
  margin-top: 45rpx;
  margin-bottom: 45rpx;
  text-align: center;
}
